@model EC.Categoria

@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<h2>Eliminar Categoria</h2>

@ViewBag.Mensaje

<h3>¿Está seguro de que desea eliminar esta categoría?</h3>
<div>
    <h4>Detalles de la Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CatCod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatCod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CatNom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatNom)
        </dd>
    </dl>

    <!-- Formulario de eliminación -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" />
            |
            @Html.ActionLink("Lista", "FormCategoriaListar", "Categoria")


        </div>
    }



</div>
